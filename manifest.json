{
  "name": "DGC Click2Call",
  "description": "Click2Call extension for DeSilva Gates Construction",
  "version": "0.1.0",
  "manifest_version": 3,
  
  "background": {
      "service_worker": "./background.js"
  },
  "action": {
      "default_popup": "./popup.html",
      "default_icon": "icon.png"
  },

  "options_page": "./options.html",
  "permissions": [
      "activeTab",
      "tabs",
      "storage",
      "browsingData",
      "scripting"
  ],
  "host_permissions": [
      "http://zipline.dgc.com/*",
      "http://zipline/*",
      "http://intra.dgc.com/*",
      "http://intra/*"
  ]
} 
